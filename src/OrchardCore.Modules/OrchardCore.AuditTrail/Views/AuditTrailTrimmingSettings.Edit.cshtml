@model AuditTrailTrimmingSettingsViewModel

@{
    var lastRunUtc = Model.LastRunUtc;
}

<section>
    <div class="form-group">
        <h5>@T["Trimming settings"]</h5>
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" asp-for="Disabled" checked="@Model.Disabled" />
            <label class="custom-control-label" asp-for="Disabled">@T["Disabled"]</label>
        </div>
        <span class="hint">@T["Whether the audit trail trimming is disabled."]</span>
    </div>

    <div class="form-group" asp-validation-class-for="RetentionPeriodDays">
        <label asp-for="RetentionPeriodDays">@T["Retention period"]</label>
        <input asp-for="RetentionPeriodDays" type="number" class="form-control" />
        <span class="hint">@T["The number of days an audit trail event is retained."]</span>
    </div>

    <div class="form-group" asp-validation-class-for="LastRunUtc">
        <label asp-for="LastRunUtc">@T["Last run"]</label>
        <div class="form-control">@(lastRunUtc.HasValue ? await DisplayAsync(await New.DateTime(Utc: lastRunUtc.Value, Format: "g")) : T["Never"])</div>
        <span class="hint">@T["The last time the audit trail trimming was run."]</span>
    </div>
</section>
